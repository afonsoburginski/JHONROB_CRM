generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  username String
  email    String
}
model Client {
  id        Int        @id @default(autoincrement())
  name      String
  email     String
  phone     String
  address   String
  city      String
  state     String
  zip       String
}

// Exemplo de modelo de produto
model Product {
  id            Int            @id @default(autoincrement())
  title         String
  models        Model[]
}

// Exemplo de modelo de modelo
model Model {
  id         Int        @id @default(autoincrement())
  title      String
  productId  Int
  product    Product   @relation(fields: [productId], references: [id])
  capacities Capacity[]
}

// Exemplo de modelo de capacidade
model Capacity {
  id       Int      @id @default(autoincrement())
  title    String
  modelId  Int
  model    Model   @relation(fields: [modelId], references: [id])
  heights  Height[]
}

// Exemplo de modelo de altura
model Height {
  id         Int       @id @default(autoincrement())
  title      String
  power      String
  capacityId Int
  capacity   Capacity @relation(fields: [capacityId], references: [id])
}

model InputOutput {
  id        Int      @id @default(autoincrement())
  input     String
  output    String

  @@map(name: "input_outputs")
}